<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".PeternakJoinActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_toolbar"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@null"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Peternak"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/keluar_koperasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_exit_to_app_black_24dp"/>
    </RelativeLayout>
    <!--Detail Peternak-->
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profilIv"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:civ_border="true"
            app:civ_border_color="@color/white"
            tools:srcCompat="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/tv_nampet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Peternak"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/profilIv"/>
        <TextView
            android:id="@+id/namapet"
            android:layout_below="@+id/tv_nampet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/profilIv"/>
        <TextView
            android:id="@+id/tv_tempat"
            android:layout_below="@id/namapet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempat/Tanggal Lahir"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/profilIv"/>
        <TextView
            android:id="@+id/tempattv"
            android:layout_below="@+id/tv_tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"

            android:layout_toRightOf="@id/profilIv"/>
        <TextView
            android:id="@+id/tv_umur"
            android:layout_below="@id/tempattv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umur"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/umurtv"
            android:layout_below="@+id/tv_umur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_below="@id/umurtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/emailtv"
            android:layout_below="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_pendidikan"
            android:layout_below="@+id/emailtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendidikan"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/pendidikantv"
            android:layout_below="@+id/tv_pendidikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_koperasi"
            android:layout_below="@+id/pendidikantv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anggota Koperasi"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/anggotakoperasi"
            android:layout_below="@+id/tv_koperasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_alamat"
            android:layout_below="@+id/anggotakoperasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_detail_peternak"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/alamat"
            android:layout_below="@+id/tv_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Null"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/terimagabung"
            android:layout_below="@id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terima"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/tolakgabung"/>
        <Button
            android:id="@+id/tolakgabung"
            android:layout_below="@id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tolak"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"/>
    </RelativeLayout>
</RelativeLayout>